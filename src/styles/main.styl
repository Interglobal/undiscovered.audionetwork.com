/* http://meyerweb.com/eric/tools/css/reset/
   v2.0 | 20110126
   License: none (public domain)
*/
html, body, div, span, applet, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre,
a, abbr, acronym, address, big, cite, code,
del, dfn, em, img, ins, kbd, q, s, samp,
small, strike, strong, sub, sup, tt, var,
b, u, i, center,
dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td,
article, aside, canvas, details, embed,
figure, figcaption, footer, header, hgroup,
menu, nav, output, ruby, section, summary,
time, mark, audio, video
  margin: 0
  padding: 0
  border: 0
  font-size: 100%
  vertical-align: baseline

article, aside, details, figcaption, figure,
footer, header, hgroup, menu, nav, section
  display: block

ol, ul
  list-style: none

blockquote, q
  quotes: none

blockquote:before, blockquote:after,
q:before, q:after
  content: ''
  content: none

table
  border-collapse: collapse
  border-spacing: 0

// UTILITY

.u-pointer:hover
  cursor: pointer

// TYPOGRAPHY

@font-face
  font-family: 'neue_droschke'
  src: url('fonts/neue_droschke-webfont.eot')
  src: url('fonts/neue_droschke-webfont.eot?#iefix') format('embedded-opentype'), url('fonts/neue_droschke-webfont.woff2') format('woff2'), url('fonts/neue_droschke-webfont.woff') format('woff'), url('fonts/neue_droschke-webfont.ttf') format('truetype'), url('fonts/neue_droschke-webfont.svg#neue_droschkehalbfett') format('svg')
  font-weight: normal
  font-style: normal

@font-face
  font-family: 'geogrotesque-thin'
  src: url('fonts/geogrotesque-thin-webfont.eot')
  src: url('fonts/geogrotesque-thin-webfont.eot?#iefix') format('embedded-opentype'), url('fonts/geogrotesque-thin-webfont.woff2') format('woff2'), url('fonts/geogrotesque-thin-webfont.woff') format('woff'), url('fonts/geogrotesque-thin-webfont.ttf') format('truetype'), url('fonts/geogrotesque-thin-webfont.svg#neue_droschkehalbfett') format('svg')
  font-weight: normal
  font-style: normal

html
  font-size: 15px
  line-height: 1.4em
  font-family: sans-serif

.font-neue
  font-family: 'neue_droschke'
  letter-spacing: 0.06em

.font-geogrot
  font-family: 'geogrotesque-thin'

h1, h2, h3, h4 , h5, h6
  font-weight: normal

h1
  font-size: 3em
  line-height: 1.6em

h2
  font-size: 2.2em
  line-height: 1.3em

.font-underline
  border-bottom: 4px solid black
  display: inline-block

h3
  font-size: 1.6em
  line-height: 1.4em

p
  margin-bottom: 1em

// LINKS
a
  color: inherit
  text-decoration: none

// STRUCTURE
main,
.container
  max-width: 1024px
  margin: 0 auto

.background
  background-image: url(/img/UD_BG.png)
  background-position: center center
  background-size: cover
  color: white

// HEADER
#header
  width: 100vw
  height: 100vh
  position: relative

#header-middle
  max-width: 80%
  margin: 0 auto
  text-align: center

#logo-undiscovered-subheading
  padding: 0.7em 1em
  border: 1px solid white
  display: inline-block

#header-bottom
  position: relative
  text-align: center
  .logo-audionetwork
    position: absolute
    right: 10px
    top: 0px

#header-number
  position: absolute
  left: 10px
  top: 0px
  h2
    font-size: 6em

.logo-audionetwork
  max-width: 200px


// NAV AFTER HEADER
#nav-main
  width: 100%
  position: fixed
  top: 0
  background: rgba(255,255,255,0.5)
  z-index: 1
  transform: translateY(-100%)
  transition: all 300ms
  .logo-audionetwork
    width: 95px

#nav-main.show
  transform: translateY(0)


// FIXED SCROLLING NAV
#nav-scroll
  z-index: 999
  position: fixed
  right: 20px
  top: 30%
  font-size: 1em
  li
    padding: 0.5em 0
    text-align: center
    &.scroll-arrow
      font-size: 0.5em

// ARTIST
.artist
  display: flex
  position: relative
  box-sizing: border-box
  padding: 60px 0 80px 0

.artist:nth-child(odd)
  flex-direction: row-reverse

.artist:nth-child(odd) .artist-about
  padding: 0 108px 0 12px

.artist-picture
  position: absolute
  top: 0
  right: 0
  z-index: -1
  max-width: 100%

.artist:nth-child(odd) .artist-picture
  left: 0

.artist-about,
.artist-music
  box-sizing: border-box

.artist-about
  max-width: 44.4%
  padding: 0 12px 0 108px

.artist-header
  text-align: center
  margin-bottom: 2em

.artist-read-more
  display: block
  text-align: right
  font-size: 1.1em
  text-decoration: underline
  &::after
    content: "\2192"
    margin-left: 0.5em
    text-decoration: none

.artist-music
  max-width: 55.6%
  padding: 0 40px
  display: flex;
  flex-flow: column wrap;
  justify-content: flex-end;

.artist-quote
  text-align: center
  font-size: 2em
  &:before
    content: '"'
    display: block
    font-size: 2em
    line-height: 0.1em
  &:after
    content: '"'
    display: block
    font-size: 2em
    line-height: 1.1em


// FOOTER

#more-undiscovered
  list-style: none
  display: flex
  flex-flow: row wrap
  justify-content: space-between

#footer-content
  max-width: 680px
  margin: 0 auto
  display: flex
  border-top: 1px solid white
  padding: 35px 0

#footer-contact
  text-align: center
  box-sizing: border-box
  border: 1px solid white
