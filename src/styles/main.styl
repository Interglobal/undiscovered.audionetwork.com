// VARIABLES

$yellow = #fbc61f
$gray = #7f8285
$blue = #002d59

$margin-basic = 25px
$height-nav-main = 100px

// RESET

html, body, div, span, applet, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre,
a, abbr, acronym, address, big, cite, code,
del, dfn, em, img, ins, kbd, q, s, samp,
small, strike, strong, sub, sup, tt, var,
b, u, i, center,
dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td,
article, aside, canvas, details, embed,
figure, figcaption, footer, header, hgroup,
menu, nav, output, ruby, section, summary,
time, mark, audio, video
  margin: 0
  padding: 0
  border: 0
  font-size: 100%
  vertical-align: baseline

article, aside, details, figcaption, figure,
footer, header, hgroup, menu, nav, section
  display: block

ol, ul
  list-style: none

blockquote, q
  quotes: none

blockquote:before, blockquote:after,
q:before, q:after
  content: ''
  content: none

table
  border-collapse: collapse
  border-spacing: 0


// UTILITY

.u-pointer:hover
  cursor: pointer

img
  max-width: 100%
  height: auto

.u-cf:before,
.u-cf:after 
  content: " "
  display: table

.u-cf:after
  clear: both

// TYPOGRAPHY

@font-face
  font-family: 'neue_droschke'
  src: url('fonts/neue_droschke-webfont.eot')
  src: url('fonts/neue_droschke-webfont.eot?#iefix') format('embedded-opentype'), url('fonts/neue_droschke-webfont.woff2') format('woff2'), url('fonts/neue_droschke-webfont.woff') format('woff'), url('fonts/neue_droschke-webfont.ttf') format('truetype'), url('fonts/neue_droschke-webfont.svg#neue_droschkehalbfett') format('svg')
  font-weight: normal
  font-style: normal

@font-face
  font-family: 'geogrotesque-thin'
  src: url('fonts/geogrotesque-thin-webfont.eot')
  src: url('fonts/geogrotesque-thin-webfont.eot?#iefix') format('embedded-opentype'), url('fonts/geogrotesque-thin-webfont.woff2') format('woff2'), url('fonts/geogrotesque-thin-webfont.woff') format('woff'), url('fonts/geogrotesque-thin-webfont.ttf') format('truetype'), url('fonts/geogrotesque-thin-webfont.svg#neue_droschkehalbfett') format('svg')
  font-weight: normal
  font-style: normal

html
  font-size: 15px
  line-height: 1.4em
  font-family: sans-serif
  overflow-y: scroll

.font-neue
  font-family: 'neue_droschke'
  letter-spacing: 0.06em

.font-geogrot
  font-family: 'geogrotesque-thin'

h1, h2, h3, h4 , h5, h6
  font-weight: normal

h1
  font-size: 3.2em
  line-height: 1.2em

h2
  font-size: 2.2em
  line-height: 1.3em

.font-underline
  border-bottom: 5px solid black
  display: inline-block

.font-uppercase
  text-transform: uppercase

h3
  font-size: 1.6em
  line-height: 1.4em

h4
  line-height: 1em

p
  margin-bottom: 1em

.font-align-left
  text-align: left

.font-align-right
  text-align: right

.font-align-center
  text-align: center


// LINKS

a
  color: inherit
  text-decoration: none


// FORM

input
  border: 0
  outline: 0
  background-color: transparent

// STRUCTURE

.container
  max-width: 1024px
  margin: 0 auto

.background
  background-image: url(../img/UD_BG.png)
  background-position: center center
  background-size: cover
  color: white

// HEADER

#header
  width: 100%
  position: relative
  display: flex
  flex-direction: column
  justify-content: space-around
  align-items: center

  .logo-audionetwork
    max-height: 90px
    margin-bottom: 10px
    width: auto

#header-middle
  margin: 0 auto
  text-align: center

#logo-undiscovered-subheading
  padding: 0.7em 1em
  border: 1px solid white
  display: inline-block

#header-bottom
  z-index: 999
  position: absolute
  margin: 0 20px;
  bottom: 10px
  left: 0
  right: 0
  display: flex
  flex-direction: row
  justify-content: space-between
  align-items: center

#header-number
  font-size: 6em


// NAV AFTER HEADER

#nav-main
  display: flex
  justify-content: center
  width: 100%
  height: $height-nav-main
  position: fixed
  top: 0
  background: rgba(255,255,255,0.8)
  z-index: 1
  transform: translateY(-100%)
  transition: all 300ms

  .logo-undiscovered
    height: 70px

  .logo-audionetwork
    height: 50px

#nav-main.show
  transform: translateY(0)

.nav-main-block
  width: 33.333%
  box-sizing: border-box
  padding: ($margin-basic/2)

#nav-main-social
  width: 161px
  float: right
  img
    vertical-align: text-top

.button-share
  background-color: $gray
  padding: 3px 6px
  display: inline-block
  text-align: center
  color: white
  width: 66px

.mail-signup
  box-sizing: border-box
  padding: 4px
  border: solid 2px $gray
  margin-top: 4px


// FIXED SCROLLING NAV

#nav-scroll
  z-index: 999
  position: fixed
  right: 20px
  top: 30%
  font-size: 1em
  li
    padding: 0.5em 0
    text-align: center
    &.scroll-arrow
      font-size: 0.5em
    &.active
      color: $yellow


// ARTIST

.artist
  display: flex
  position: relative
  box-sizing: border-box
  padding: ($height-nav-main*1.5) 0 80px 0

.artist:nth-child(even)
  flex-direction: row-reverse

.artist:nth-child(even) .artist-about
  padding: 0 108px 0 12px

.artist-picture
  position: absolute
  top: $height-nav-main
  right: 0
  z-index: -1
  max-width: 100%

.artist:nth-child(even) .artist-picture
  left: 0

.artist-about,
.artist-music
  box-sizing: border-box
  flex-direction: column

.artist-about
  max-width: 44.4%
  padding: 0 12px 0 108px

.artist-header
  text-align: center
  margin-bottom: 2em

.artist-read-more
  display: block
  text-align: right
  font-size: 1.1em
  text-decoration: underline
  &::after
    content: "\2192"
    margin-left: 0.5em
    text-decoration: none

.artist-music
  max-width: 55.6%
  padding: 0 40px
  display: flex;
  justify-content: flex-end;

.artist-quote
  text-align: center
  &:before
    content: '"'
    display: block
    font-size: 3.2em
    line-height: 0.1em
  &:after
    content: '"'
    display: block
    font-size: 3.2em
    line-height: 1.1em

.artist-song
  position: relative
  background: $blue
  padding: 15px 25px
  display: flex;
  flex-direction: row;
  overflow: hidden

  audio
    display: none
    opacity: 0
    position: absolute
    top: 55px
    left: 10px
    

  &.playing .player-control
    background-position-y: 100%

  &.playing h4:before
    display: none

.artist-song h4
  color: white
  font-size: 2.5em
  line-height: 1.2
  overflow: hidden
  white-space: nowrap
  position: relative
  width: 100%

  &:before
    display: block
    background: #002d59
    content: 'Play Featured Track'
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%

.player-control
  display: inline-block
  width: 27px
  height: 43px
  background: url('../img/player_sprite.png')
  transition: all 200ms
  margin-right: 10px;

// FOOTER

#footer
  box-sizing: border-box
  padding-top: ($height-nav-main*1.5)

#footer .container
  max-width: 860px
  padding: 0 20px

#more-undiscovered li
    max-width: 45%

#more-undiscovered li 
  float: right;

#more-undiscovered li:nth-child(odd) 
  float: left;

#more-undiscovered img
  max-width: 100%
  margin-bottom: 30px

@media  only screen and (min-width: 840px )
  #more-undiscovered img
      max-width: 192px

#more-undiscovered
  list-style: none
  display: block

@media  only screen and (min-width: 840px )
  #more-undiscovered
    display: flex;
    justify-content: space-between;

#footer-content
  font-size: 0.9rem
  max-width: 680px
  margin: 0 auto
  border-top: 2px solid white
  padding: 35px 0


#footer-content > *
  max-width: 100%

@media  only screen and (min-width: 840px )
  #footer-content 
    display: flex
    flex-direction: row
    justify-content: space-between

  #footer-content > *
    max-width: 48%

#footer-contact
  padding: 10px 15px
  text-align: center
  box-sizing: border-box
  border: 1px solid white

#footer-contact h3
  font-size: 2.6em
  border-bottom: 2px solid white
  margin-bottom: 15px
  padding-bottom: 5px


// RESPONSIVE

@media only screen and (min-width: 1400px)

  .background
    background-image: url(../img/UD_BG_large.png)

@media only screen and (max-width: 800px)

  #nav-scroll
    display: none

  #header-number
    font-size: 4em

  .logo-audionetwork
    max-width: 140px

  .artist
    flex-direction: column !important
    padding: 0

  .artist-picture
    display: block
    position: relative
    height: auto
    padding-bottom: $margin-basic

  .artist-about
    max-width: 100% !important
    padding: 0 !important
    margin: 0 auto !important
    width: 90% !important

  .artist-music
    display: block
    max-width: 100%
    width: 90%
    padding: 0
    margin: 0 auto $margin-basic auto
    text-align: center

  .artist-quote
    display: none
